{
  "name": "vue-markdown-x",
  "version": "0.2.1",
  "private": true,
  "scripts": {
    "lint": "eslint .",
    "format": "eslint --fix .",
    "commit": "git-cz",
    "build": "pnpm --filter \"./packages/**\" build",
    "prerelease": "pnpm build",
    "release": "bumpp",
    "prepare": "husky"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.16.0",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@commitlint/cz-commitlint": "^19.8.1",
    "@types/node": "^22.19.0",
    "bumpp": "^9.11.1",
    "commitizen": "^4.3.1",
    "eslint": "^9.39.1",
    "eslint-plugin-format": "^1.0.2",
    "husky": "^9.1.7",
    "inquirer": "^12.10.0",
    "lint-staged": "^15.5.2",
    "typescript": "^5.9.3"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
